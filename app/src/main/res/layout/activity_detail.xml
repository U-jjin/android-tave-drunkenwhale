<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="6dp">

        <TextView
            android:id="@+id/detail_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="상세페이지"
            android:textSize="20dp"
            android:textColor="@color/AlmanchuDark"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_marginLeft="20dp"/>


    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:elevation="10dp"
                android:background="@drawable/circle_shape"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/detail_view"
                android:src="@drawable/ic_beer" />

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginLeft="32dp"
               android:layout_marginRight="8dp"
                android:background="@drawable/detail_shape"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_marginLeft="100dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginTop="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:fontFamily="@font/calibri"
                                android:textColor="@color/AlmanchuAccent"
                                android:textSize="20dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="레페 로얄 윗브레드 골딩"
                                android:id="@+id/detail_drink_name"/>
                        </LinearLayout>
                        <TextView
                            android:text="LEFFE ROYALE (WHITBREAB GOLDING)"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/detail_drink_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="맥주" />
                            <TextView
                                android:id="@+id/detail_drink_type2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="에일" />
                        </LinearLayout>


                        <LinearLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:textSize="15dp"
                                    android:textColor="@color/AlmanchuDark"
                                    android:layout_marginTop="8dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="도수"/>
                                <TextView
                                    android:id="@+id/alcohol_percent"
                                    android:textColor="#111111"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7.5%"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_marginLeft="16dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:textSize="15dp"
                                    android:id="@+id/producer"
                                    android:layout_marginTop="8dp"
                                    android:textColor="@color/AlmanchuDark"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="가격"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="58000"
                                    android:textColor="#111111" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



        </RelativeLayout>


        <LinearLayout
            android:background="@drawable/detail_shape"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/detail_drink_tv"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="상세정보"/>

                <ImageView
                    android:layout_marginTop="8dp"
                    android:id="@+id/detail_drink_icon"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/detail_drink_linear"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="원산지:"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="벨기에"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="제조사:"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INBEV BVBA/SPRL."/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="수입사:"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="오비맥주"/>
                </LinearLayout>



            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:elevation="10dp"
            android:orientation="vertical"
            android:background="@color/AlmanchuBackground"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/calibri"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="같은 맥주에서 이런 술은 어떠신가요?"/>

            <androidx.recyclerview.widget.RecyclerView
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/detail_recyclerview"
                android:layout_marginBottom="16dp">
            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/calibri"
                android:text="비슷한 맛을 가진 술도 있어요! "
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
            <androidx.recyclerview.widget.RecyclerView
                android:scrollbars="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:id="@+id/detail2_recyclerview"
                android:layout_marginBottom="16dp">
            </androidx.recyclerview.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:elevation="10dp"
            android:orientation="vertical"
            android:background="@color/AlmanchuBackground"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/calibri"
                android:textSize="18dp"
                android:textColor="#FFFFFF"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평점"/>

            <LinearLayout
                android:layout_marginBottom="16dp"
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#FFFFFF" >
            </LinearLayout>




        </LinearLayout>



    </LinearLayout>

    </ScrollView>
</LinearLayout>