<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/findid_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="6dp">

        <TextView
            android:id="@+id/findid_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID(email) 찾기"
            android:textSize="20dp"
            android:textColor="@color/AlmanchuDark"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_marginLeft="20dp"/>

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:layout_marginTop="128dp"
        android:text="등록한 전화번호를 입력해 주세요."
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:gravity="center"
        android:id="@+id/editTextUserPhone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal"
        android:hint="Enter PhoneNumber"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonFindID"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_gravity="center_horizontal"
        android:text="아이디찾기"
        android:backgroundTint="@color/AlmanchuPrimary"
        android:fontFamily="@font/jalnan"
        android:textColor="#FFFFFF"
        android:background="@drawable/rounded"/>







</LinearLayout>