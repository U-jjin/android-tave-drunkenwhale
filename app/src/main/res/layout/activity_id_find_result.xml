<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/findresult_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="6dp">

        <TextView
            android:id="@+id/findresult_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID(email) 찾기"
            android:textSize="20dp"
            android:textColor="@color/AlmanchuDark"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_marginLeft="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디(이메일)"
        android:fontFamily="@font/jalnan"
        android:layout_gravity="center"
        android:layout_marginTop="300dp"
        android:textSize="30dp"
        android:id="@+id/id_result">
    </TextView>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/go_login"
        android:layout_gravity="center"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/jalnan"
        android:background="@color/AlmanchuPrimary"
        android:layout_marginTop="20dp">
    </Button>
    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/go_find_password"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="비밀번호찾기"
        android:textColor="#FFFFFF"
        android:background="@color/AlmanchuPrimary"
        android:fontFamily="@font/jalnan">

    </Button>

</LinearLayout>