<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/join_toolbar"
        android:layout_height="?android:actionBarSize"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

        <TextView
            android:id="@+id/join_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:textSize="20dp"
            android:textColor="@color/AlmanchuDark"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_marginLeft="20dp"/>

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_marginRight="16dp"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="30dp"
            android:textColor="@color/AlmanchuBackground" />

        <EditText
            android:background="@drawable/join_editview_shape"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/input_id"
            android:layout_gravity="center_horizontal"
            android:hint="   아이디를 입력하세요(실존 이메일)"/>


    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_marginRight="8dp"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PWD"
            android:textSize="28dp"
            android:textColor="@color/AlmanchuBackground" />

        <EditText
            android:background="@drawable/join_editview_shape"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/input_password"
            android:layout_gravity="center_horizontal"
            android:hint="   비밀번호 입력"
            android:inputType="textPassword"/>
    </LinearLayout>

    <EditText
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:background="@drawable/join_editview_shape"
        android:layout_width="305dp"
        android:layout_height="40dp"
        android:id="@+id/check_password"
        android:layout_gravity="right"
        android:hint="   비밀번호 확인"
        android:inputType="textPassword"/>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_marginRight="8dp"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textSize="27dp"
            android:textColor="@color/AlmanchuBackground" />

        <EditText
            android:background="@drawable/join_editview_shape"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/name"
            android:layout_gravity="center_horizontal"
            android:hint="   이름 입력" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="8dp"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowRadius="2.0"
                android:shadowColor="#33000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NICK"
                android:textSize="20dp"
                android:textColor="@color/AlmanchuBackground" />
            <TextView
                android:layout_marginRight="8dp"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:shadowRadius="2.0"
                android:shadowColor="#33000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME"
                android:textSize="20dp"
                android:textColor="@color/AlmanchuBackground" />

        </LinearLayout>


        <EditText
            android:layout_gravity="center"
            android:background="@drawable/join_editview_shape"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/nickname"
            android:hint="   닉네임 입력"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:gravity="center"
            android:layout_marginRight="8dp"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PHONE"
            android:textSize="25dp"
            android:textColor="@color/AlmanchuBackground" />

        <EditText
            android:background="@drawable/join_editview_shape"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/phone_number"
            android:layout_gravity="center_horizontal"
            android:hint="   전화번호입력(-없이)" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="회원가입"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/AlmanchuPrimary"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/jalnan"
        android:id="@+id/join_btn">
    </Button>
</LinearLayout>