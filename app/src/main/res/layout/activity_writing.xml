<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Community.WritingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/writing_toobar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="6dp">

        <TextView
            android:id="@+id/writing_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="글쓰기"
            android:textSize="20dp"
            android:textColor="@color/AlmanchuDark"
            android:shadowDx="5.0"
            android:shadowDy="5.0"
            android:shadowRadius="2.0"
            android:shadowColor="#33000000"
            android:layout_marginLeft="20dp"/>

    </androidx.appcompat.widget.Toolbar>

        <Spinner
            android:id="@+id/writing_spinner"
            android:entries="@array/alcholtype"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:spinnerMode="dropdown"></Spinner>

        <EditText
            android:id="@+id/writing_title_et"
            android:backgroundTint="@color/AlmanchuDark"
            android:layout_marginBottom="8dp"
            android:layout_marginHorizontal="8dp"
            android:hint="제목을 입력하세요."
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/writing_text_et"
        android:background="@drawable/writing_shape"
        android:backgroundTint="#FFFFFF"
        android:gravity="start"
        android:layout_weight="3"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="8dp"
        android:hint="내용을 입력하세요.(최대 1000자)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>






</LinearLayout>